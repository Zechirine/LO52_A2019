<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/FluxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/hidenButtons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/declinedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/DeclineColor"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="@string/Decline"
                android:textColor="@color/White"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/approvedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/ApproveColor"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="@string/Approve"
                android:textColor="@color/White"
                android:textStyle="bold" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingTop="20dip"
            tools:layout_editor_absoluteX="426dp"
            tools:layout_editor_absoluteY="25dp">

        <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/fluxStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="90"
                            app:srcCompat="@android:drawable/ic_input_add" />

                    <TextView
                            android:id="@+id/fluxName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="10"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="@color/MainColorOnMainBackground"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/memberList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anthony"
                            android:textColor="@color/MainColorOnMainBackground"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/memberListTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Anthony"
                            android:textColor="@color/MainColorOnMainBackground"
                            app:autoSizeTextType="uniform" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/pendingAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dip"
                    android:text="TextView"
                    android:textColor="@color/MainColorOnMainBackground"
                    android:textStyle="bold" />

        </LinearLayout>

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="1dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@color/MainHintColor" />

    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>