<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/row_createflux"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundListView"
        android:maxHeight="@dimen/cell_size">

    <CheckBox
            android:id="@+id/isConcerned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/nameMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/isConcerned"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/amountRowTextField"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:textColor="@color/MainColorOnMainBackground"
            android:textColorHint="@color/MainHintColor"
            app:layout_constraintEnd_toStartOf="@+id/percentageTextField"
            app:layout_constraintTop_toTopOf="@+id/percentageTextField" />

    <EditText
            android:id="@+id/percentageTextField"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:hint="@string/symbolPercentage"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd"
            android:textColor="@color/MainColorOnMainBackground"
            android:textColorHint="@color/MainHintColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>